<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hibernate.entity.personEntity" dynamic-update="true" >
		<id name="pid" >
		<generator class="increment"></generator>
		</id>
		<property name="name" column="name" type="string" length="10"
			/>
		<property name="addrs" column="addrs" type="string" length="45"
			/>
		<property name="mobile" column="mobile" type="long" length="10"
			 />
		<property name="aadhar"  column="aadhar" type="long" length="12"
			></property>
			<property name="gender" column="gender"  type="string" length="45"
			/>
	</class>
</hibernate-mapping>